<phpunit>
    <testsuites>
        <testsuite name="all">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <testsuites>
        <testsuite name="travis">
            <directory>tests</directory>
            <exclude>tests/api</exclude>
        </testsuite>
    </testsuites>

    <testsuites>
        <testsuite name="dev">
            <file>tests/classes/OverviewGetTest.php</file>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../classes</directory>
        </whitelist>
    </filter>

</phpunit>